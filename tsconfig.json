{
	"include": ["./src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"downlevelIteration": true,
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true
	}
}